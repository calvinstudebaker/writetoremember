	<div class="container">
		<center>
			<h1>Create New Account</h1>
			<h4 id="errorPlaceholder" class="error"></h4>
			<form action="javascript:void(0)" onsubmit="createAccount()">
				<input type="text" placeholder="username" id="username" autocomplete="off"><br>
				<input type="password" placeholder="password" id="password" autocomplete="off"><br>
				<input type="password" placeholder="confirm password" id="retypePassword" autocomplete="off"><br>
	    		<input type="submit" value="Create Account" id="createButton"><br>
	    		<h3>Back to Login Page</h3>
	    		<button type="button" id ="backButton" class="flatButton">Home</button>
			</form>
		</center>

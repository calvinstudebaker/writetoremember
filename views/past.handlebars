<body>
	<div class = "content">
	<div class="header">
		<center>
		<span class="logo">Past</span>
		</button>
		</center>
  	</div>
  	<div class ="logOut">

  	<button type = "button" id = "logOutButton" class = "btn btn-primary btn-sm">Log Out</button>
  </div>
	<div class="container">
		<center>
			<div class="pastEntries">
				<table id ="pastTable" class="table table-striped table-hover">
					{{#each entries}}
					<tr> <div class = "entryRow" id ="{{_id}}">
						<td> {{date}}</td> 
						<td> {{text}} </td>
						<td> <h5>{{mood_index}}</h5> </td>

						<td><a data-toggle="modal" href="#editModal_{{id}}" class = "btn btn-primary btn-sm pastButton">edit</a>
							<div class="modal" id="editModal_{{id}}">
							<div class="modal-dialog">
							  <div class = "modal-content">
        						<div class="modal-header">
							         <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
							         <h4 class="modal-title edi">Edit Entry</h4>
							    </div>
							    <textarea class="modal-body editModalTextArea" id ="edited_text_field_{{id}}">{{text}}
							   </textarea>
							     <div class="modal-footer">
							     	<button type ="button" href="#" id = "{{id}}" class="btn btn-primary pastButton saveEditsButton">Save changes</button>
						         </div> <!-- todo: connect saveEditsButton to database--> 

						      	</div>
						     </div>
						</div></td>

						<td><a data-toggle="modal" href="#deleteModal_{{id}}" class = "btn btn-primary btn-sm pastButton">delete</a>
							<div class="modal" id="deleteModal_{{id}}">
							<div class="modal-dialog">
							  <div class = "modal-content">
        						<div class="modal-header">
							         <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
							         <h4 class="modal-title edi">Delete Entry</h4>
							    </div>
							    <textarea class="modal-body">Are you sure you want to delete this entry?
							   </textarea>
							     <div class="modal-footer">
							     	<button type ="button" href="#" id = "{{id}}" class="btn btn-primary pastButton confirmDeleteButton">Delete</button>
							     	<button type ="button" href="#" id = "{{id}}" class="btn btn-primary pastButton cancelDeleteButton">Cancel</button>
						         </div> 

						      	</div>
						     </div>
						</div></td>

						<!--td><button type = "button" id = "{{id}}" class = "deleteButton btn btn-primary btn-sm pastButton">
								<span class="glyphicon glyphicon-trash"></td-->	
					</div>
					{{/each}}
				</table>
			</div>
			<br><br>			
		</center>
	</div>
		<div class ="footer">
		<br>
		<center>
			<button type="button" id="pastButton" class="btn btn-primary btn-lg bottomButton">
			<span class="glyphicon glyphicon-list">
			<button type="button" id="homeButton" class="btn btn-primary btn-lg bottomButton">
			<span class="glyphicon glyphicon-edit">
			<button type="button" id="settingsButton" class="btn btn-primary btn-lg bottomButton">
			<span class="glyphicon glyphicon-cog">
			<button type="button" id="instructionsButton" class="btn btn-primary btn-lg bottomButton">
			<span class="glyphicon glyphicon-book">
		</center>
	</div>
</div>
